# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false
max_line_length = 100

[*.{ts,tsx,js,jsx,json}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
